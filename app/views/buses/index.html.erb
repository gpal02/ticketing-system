<h1>Buses Information</h1>
<p>Here are the available buses, you can choose your desired bus.</p>

<div class="container">
  <div class="row">
    <div class="card">
      <center><h3 class="font-bold text-3xl mb-3">Search Buses</h3></center>
      <div class="d-flex justify-content-center">
        <%= search_form_for @q, url: :buses do |f| %>
          <div class="flex space-x-3">
            <%= f.label :source_cont, 'Source' %>
          <%= f.search_field :source_cont %>
          <%= f.label :destination_cont, 'Destination' %>
          <%= f.search_field :destination_cont %>

            <%= f.submit 'Search', class: "btn btn-primary"%>
          </div><br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :id) %></th>
      <th scope="col">Bus Number</th>
      <th scope="col">Managed By ID</th>
      <th scope="col">Source</th>
      <th scope="col">Destination</th>
      <th scope="col"><%= sort_link(@q, :date) %></th>
      <th scope="col">Time</th>
      <th scope="col">Bus Type</th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do|bus|%>
    <tr>
      <th scope="row"><%=  bus.id%></th>
      <td><%= link_to bus.bus_number, bus_path(bus.id)%></td>
      <td><%= %></td>
      <td><%= bus.source%></td>
      <td><%= bus.destination %></td>
      <td><%= bus.date %></td>
      <td><%= bus.time %></td>
      <td><%= bus.bus_type %></td>
      <td>
        <%= link_to "Book now", new_ticket_path, class: "btn btn-outline-secondary btn-sm"%>
      </td>
    </tr>
    <% end%>
  </tbody>
</table>

  <% if can? :create, @bus => Bus%>
    <%= link_to "Add Bus", new_bus_path, class: "btn btn-outline-info"%>
  <% end %>

<p style="color: green"><%= notice %></p>


<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @buses %>
  </div>
  <%= will_paginate @buses %>
</div>

