<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      
      <%= form_with model: bus do|form| %>
        
        <div class="col-12 ">
          <%= form.label :choose_travels, class: "form-label"%><br>
          <%=form.select(:manager_id, User.where.not(role_id:1).pluck(:full_name,:id), { include_blank: true }, { class: 'form-select' })%>          
          <% bus.errors.full_messages_for(:role_id).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="col-12 ">
          <%= form.label :bus_number, class: "form-label"%><br>
          <%= form.text_field :bus_number, class: "form-control" %>
          <% bus.errors.full_messages_for(:bus_number).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
        
        <div class="col">
          <%= form.label :bus_type, class: "form-label" %><br>
          <%=form.select(:bus_type, [["AC","AC"],["Non-AC","non-AC"]], { include_blank: true }, { class: 'form-select' })%>
        </div>
        
        <div class="col">
          <%= form.label :source, class: "form-label" %><br>
          <%= form.text_field :source, class: "form-control"%>
        </div>
        
        <div class="col">
          <%= form.label :destination, class: "form-label" %><br>
          <%= form.text_field :destination, class: "form-control"%>
        </div>
         
        <div class="col">
          <%= form.label :date, class: "form-label" %><br>
          <%= form.date_field :date, class: "form-control"%>
        </div>
        
        <div class="col">
          <%= form.label :time, class: "form-label" %><br>
          <%= form.time_field :time, class: "form-control"%>  
        </div>
        <div class="col">
          <%= form.label :price, class: "form-label" %><br>
          <%= form.text_field :price, class: "form-control"%>  
        </div>
              
        <hr>
        
        <div class="row justify-content-center">
          <%= form.submit :Submit , class: 'btn btn-primary'%>
        </div>

      <% end %>

    </div>
  </div>
</div>

