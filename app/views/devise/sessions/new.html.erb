<div class="container ">
  <div class="row m-2 justify-content-center">
    <div class="card px-5 py-2 w-50"  style="background-color: ghostwhite ;">
      <h2>Log in</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field my-2">
          <%= f.label :login, "Email / Username", class: "form-label" %><br />
          <%= f.text_field :login, autofocus: true, class: "form-control" %>
        </div>

        <div class="field my-2 ">
          <%= f.label :password ,class: "form-label"%><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class: "form-control mb-3"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field my-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions my-4">
          <%= f.submit "Log in" ,class: "btn btn-primary"%>
        </div>
      <% end %>

      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>


